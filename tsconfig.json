{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"],
        "@molecules": ["./_molecules/index.ts"],
        "@atoms": ["./_molecules/_atoms/index.ts"],
        "@particles": ["./_molecules/_atoms/_particles/index.ts"],
        "@interfaces": ["./interfaces/index.ts"],
        "@images": ["./images/index.ts"]
      }
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
  }